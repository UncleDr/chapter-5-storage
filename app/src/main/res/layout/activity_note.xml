<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".NoteActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:padding="4dp"
        android:textColor="#1e1e1e"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_high_priority"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tint="@color/high_priority"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_filled_circle"/>
        <ImageView
            android:id="@+id/iv_medium_priority"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_filled_circle"
            android:tint="@color/medium_priority" />
        <ImageView
            android:id="@+id/iv_low_priority"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_filled_circle"
            android:tint="@color/low_priority"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/confirm" />

</LinearLayout>